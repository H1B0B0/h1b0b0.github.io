<div class="spinner">
  <div class="spinner-inner">
    <div class="spinner-circle"></div>
    <div class="spinner-circle-inner"></div>
  </div>
</div>

<style>
  .spinner {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 64px;
    height: 64px;
  }

  .spinner-inner {
    position: relative;
    width: 100%;
    height: 100%;
    animation: spinner-rotate 2s linear infinite;
  }

  .spinner-circle {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid transparent;
    border-top-color: #2e0b4d;
    animation: spinner-dash 1.5s ease-in-out infinite;
  }

  .spinner-circle-inner {
    position: absolute;
    top: 10px;
    left: 10px;
    right: 10px;
    bottom: 10px;
    border-radius: 50%;
    border: 3px solid transparent;
    border-top-color: #334993;
    animation: spinner-dash 1s ease-in-out infinite reverse;
  }

  @keyframes spinner-rotate {
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes spinner-dash {
    0% {
      transform: rotate(0deg);
      border-top-color: #2e0b4d;
    }
    50% {
      transform: rotate(180deg);
      border-top-color: #334993;
    }
    100% {
      transform: rotate(360deg);
      border-top-color: #2e0b4d;
    }
  }
</style>
